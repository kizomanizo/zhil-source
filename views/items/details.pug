extends layout

block content
    div(class="container")
        h2(class="mt-5")=rows.name
        div(class="row mt-3 pl-2")
            a(type="button" class="btn btn-secondary" href='/items') Back to Items
        div(class="row mt-3")
            div(class="col-lg-12")
                table(class="table")
                    thead
                        tr
                            th(scope="col") Item
                            th(scope="col") Details
                    tbody
                            tr
                                td Name
                                td= rows.name
                            tr
                                td Description
                                td= rows.description
                            tr
                                td Buying Price
                                td= rows.buying_price
                            tr
                                td Selling Price
                                td= rows.selling_price
                            tr
                                td Submitted?
                                td= rows.status
                            tr
                                td Expiry Date
                                td= rows.expiry_date
                            tr
                                td Added On
                                td= rows.created_at