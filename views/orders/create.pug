extends layout

block content
    div(class='container')
        h2(class='mt-5')= title
        div(class='row mt-3 pl-2')
            a(type='button' class='btn btn-secondary' href='/orders') Back to Orders
        div(class='row mt-3')
            div(class='col-lg-12')
                form(action='/orders' method='POST' id='addOrder' name='addOrder' enctype='application/x-www-form-urlencoded')
                    table(class='table')
                        thead
                            tr
                                th(scope='col') Item
                                th(scope='col') Quantity
                        tbody
                            each item, i in rows
                                tr
                                    td(class='col-sm-9')= item.name
                                    td(class='col-sm-3')
                                        input(type='hidden' name='messages['+i+']')
                                        input(type='hidden' name='item['+i+']' value= item.id)
                                        input(type='number' class='form-control' name='quantity['+i+']')
                    hr
                    
                    input(type='submit' class='btn btn-secondary' value='Add Order')
