extends layout

block content
    div(class="container")
        h2(class="mt-5")= title
        div(class="row mt-3 pl-2")
            a(type="button" class="btn btn-secondary" href='/orders') Back to Orders
        div(class="row mt-3")
            div(class="col-lg-12")
                    table(class="table")
                        thead
                            tr
                                th(scope="col") Item
                                th(scope="col") Quantity
                                th(scope="col") Paid Price
                                th(scope="col") Sale Date
                        tbody
                            for item in rows.items
                                - console.log(JSON.stringify(item.order_items))
                                tr
                                    td= item.name
                                    td= item.order_items.quantity
                                    td= item.order_item
                                    td= item.created_at
                    br
                    for discount in rows.discounts 
                        br
                        p= discount.id 
                        p= discount.created_at